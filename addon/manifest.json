{
  "manifest_version": 2,
  "name": "MumiGiveP",
  "version": "3.2.0",

  "description": "Give money to others automatically on PTT(Taiwan BBS Site) .",

  "icons": {
    "128": "icons/mumi-128.png",
    "48": "icons/mumi-48.png"
  },

  "permissions":[
    "activeTab",
    "tabs",
    "notifications",
    "*://term.ptt.cc/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://term.ptt.cc/*"],
      "js": ["mumi.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "128": "icons/mumi-128.png",
      "48": "icons/mumi-48.png"
    },
    "default_popup": "popup.html",
    "default_title": "Mumi~ Mumi!"
  }
}
