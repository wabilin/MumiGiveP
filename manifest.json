{
  "manifest_version": 2,
  "name": "MumiGiveP",
  "version": "3.0",

  "description": "A PTT money sending bot.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://term.ptt.cc/*"],
      "js": ["mumi.js"]
    }
  ],

  "permissions":[
    "activeTab"
  ],

  "browser_action": {
    "default_icon": {
       "48": "icons/border-48.png"
    },
	"default_popup": "popup/popup.html",
    "default_title": "Whereami?"
  }
}

